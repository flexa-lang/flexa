{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug flexa",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/flexa",
    //   "args": ["-l", "${workspaceFolder}/std/src", "${workspaceFolder}/tests/main.flx"],
    //   "cwd": "${workspaceFolder}/tests",
      "args": ["-l", "${workspaceFolder}/std/src", "${workspaceFolder}/tests/samples/tic-tac-toe_console.flx"],
      "cwd": "${workspaceFolder}/tests/samples",
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Habilitar formatação para GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
